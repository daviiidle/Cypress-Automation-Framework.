{
  "name": "cypress-automation-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "cy:open": "node node_modules/cypress/bin/cypress open",
    "cy:run": "node node_modules/cypress/bin/cypress run",
    "cy:run:headless": "node node_modules/cypress/bin/cypress run --headless",
    "cy:run:chrome": "node node_modules/cypress/bin/cypress run --browser chrome",
    "cy:run:firefox": "node node_modules/cypress/bin/cypress run --browser firefox",
    "cy:run:smoke": "node node_modules/cypress/bin/cypress run --env grepTags=@smoke",
    "cy:run:regression": "node node_modules/cypress/bin/cypress run --env grepTags=@regression",
    "cy:run:validation": "node node_modules/cypress/bin/cypress run --env grepTags=@validation",
    "cy:run:data-driven": "node node_modules/cypress/bin/cypress run --env grepTags=@data-driven",
    "cy:run:parallel": "node node_modules/cypress/bin/cypress run --record --parallel",
    "test": "npm run cy:run",
    "test:smoke": "npm run cy:run:smoke",
    "test:headless": "npm run cy:run:headless",
    "cypress:verify": "node node_modules/cypress/bin/cypress verify",
    "cypress:info": "node node_modules/cypress/bin/cypress info",
    "cypress:cache": "node node_modules/cypress/bin/cypress cache list",
    "cypress:install": "node node_modules/cypress/bin/cypress install",
    "cypress:install:force": "node node_modules/cypress/bin/cypress install --force",
    "report:merge": "node node_modules/mochawesome-merge/bin/mochawesome-merge.js cypress/reports/*.json > cypress/reports/merged-report.json",
    "report:generate": "node node_modules/mochawesome-report-generator/bin/cli.js cypress/reports/merged-report.json --reportDir cypress/reports --inline",
    "posttest": "npm run report:merge && npm run report:generate",
    "windows:setup": "node -e \"console.log('Node.js version:', process.version); console.log('Platform:', process.platform);\"",
    "windows:cypress": "cypress.cmd",
    "ci:install": "npm ci && npx cypress install",
    "ci:verify": "npx cypress verify && npx cypress info",
    "ci:test": "cypress run --config-file cypress.ci.config.js",
    "ci:test:chrome": "cypress run --config-file cypress.ci.config.js --browser chrome",
    "ci:test:firefox": "cypress run --config-file cypress.ci.config.js --browser firefox",
    "ci:test:edge": "cypress run --config-file cypress.ci.config.js --browser edge",
    "ci:smoke": "cypress run --config-file cypress.ci.config.js --env grepTags=@smoke",
    "ci:regression": "cypress run --config-file cypress.ci.config.js --env grepTags=@regression",
    "ci:report": "npm run report:merge && npm run report:generate",
    "ci:cleanup": "rm -rf cypress/screenshots/* cypress/videos/* cypress/reports/* || true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cypress/grep": "^4.1.1",
    "@faker-js/faker": "^10.0.0",
    "cypress": "^13.15.1",
    "cypress-mochawesome-reporter": "^3.8.2",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-real-events": "^1.15.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
